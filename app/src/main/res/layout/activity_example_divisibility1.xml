<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/logo_background"
    tools:context="com.example.monikam.mathemory.ExampleDivisibility1">


    <ImageView
        android:id="@+id/box2"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:srcCompat="@drawable/square"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="135dp"
        app:layout_constraintLeft_toRightOf="@+id/box1"
        android:layout_marginLeft="47dp" />

    <TextView
        android:id="@+id/t1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.049" />

    <TextView
        android:id="@+id/t2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Podzielność przez 3"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/t1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.043" />

    <TextView
        android:id="@+id/t3"
        android:layout_width="330dp"
        android:layout_height="133dp"
        android:text="Liczba jest podzielna przez 3, jeżeli suma jej cyfr tworzy liczbę przez 3. Przeciągnij pola z cyframi pomiędzy znak '+', aby otrzymać wynik ich dodawania. "
        android:textSize="20dp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/t2"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintVertical_bias="0.044" />

    <Button
        android:id="@+id/next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dalej"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.968"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp" />

    <ImageView
        android:id="@+id/box3"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:srcCompat="@drawable/square"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="135dp"
        app:layout_constraintLeft_toRightOf="@+id/box2"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="0.727" />

    <ImageView
        android:id="@+id/box1"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginBottom="135dp"
        android:layout_marginLeft="33dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:srcCompat="@drawable/square" />

    <Button
        android:id="@+id/number1"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/number_icon"
        android:textColor="@color/white"
        android:textSize="40dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/number2"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="272dp" />

    <Button
        android:id="@+id/number2"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/number_icon"
        android:textColor="@color/white"
        android:textSize="40dp"
        android:layout_marginRight="120dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="272dp" />

    <Button
        android:id="@+id/sum"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/number_icon"
        android:textColor="@color/white"
        android:textSize="40dp"
        app:layout_constraintTop_toTopOf="@+id/box3"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        app:layout_constraintRight_toRightOf="@+id/box3"
        app:layout_constraintBottom_toBottomOf="@+id/box3"
        android:layout_marginBottom="5dp"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/plus"
        android:layout_width="23dp"
        android:layout_height="40dp"
        android:text="+"
        android:textColor="@color/white"
        android:textSize="40dp"
        app:layout_constraintRight_toLeftOf="@+id/box2"
        android:layout_marginRight="10dp"
        app:layout_constraintLeft_toRightOf="@+id/box1"
        android:layout_marginLeft="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="153dp"
        app:layout_constraintHorizontal_bias="1.0" />

    <TextView
        android:id="@+id/equals"
        android:layout_width="18dp"
        android:layout_height="44dp"
        android:text="="
        android:textColor="@color/white"
        android:textSize="40dp"
        app:layout_constraintLeft_toRightOf="@+id/box2"
        android:layout_marginLeft="5dp"
        app:layout_constraintRight_toLeftOf="@+id/box3"
        android:layout_marginRight="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="149dp"
        app:layout_constraintHorizontal_bias="1.0" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="jest podzielne przez 3, zatem"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintLeft_toRightOf="@+id/sumResult"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toTopOf="@+id/textView9"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/box2"
        app:layout_constraintVertical_bias="0.533" />

    <TextView
        android:id="@+id/sumResult"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginBottom="6dp"
        android:layout_marginLeft="33dp"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/originalNum"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/originalNum"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginBottom="68dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="8dp"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/textView9" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="jest także podzielne przez 3."
        android:textColor="@color/white"
        android:textSize="20dp"
        android:layout_marginRight="29dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="69dp" />

    <TextView
        android:id="@+id/number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="liczba:"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:layout_marginLeft="133dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="23dp"
        app:layout_constraintBottom_toTopOf="@+id/box2" />

    <TextView
        android:id="@+id/value"
        android:layout_width="34dp"
        android:layout_height="24dp"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintLeft_toRightOf="@+id/number"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginBottom="35dp"
        app:layout_constraintBottom_toTopOf="@+id/equals"
        tools:layout_editor_absoluteY="340dp" />


</android.support.constraint.ConstraintLayout>
